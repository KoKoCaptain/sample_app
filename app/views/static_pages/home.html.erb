<% if signed_in? %>
    <div class="row">
      <aside class="col-sm-4 home-user-nav">
        <div>
          <%= render 'shared/user_info' %>
        </div>
        <div>
          <%= render 'shared/stats' %>
        </div>
        <div>
          <%= render 'shared/micropost_form' %>
        </div>
      </aside>
        <div class="col-sm-7 home-news-feed">
          <h3>Новости</h3>
          <%= render 'shared/feed' %>
        </div>
        </div>
<% else %>
    <div class="logo col-sm-12">
      <%= image_tag 'logo.png', alt: 'logo', width: 500 %><br>
    </div>
    <div class="center hero-unit non-signed-home-div">
      <%= link_to 'Войти', signin_path, class: 'sign-in-link' %><br>
      <p>или</p>
      <%= link_to 'Зарегистрироваться', signup_path, class: 'sign-out-link' %>
    </div>
<% end %>